<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

       <!--  <fragment
            android:id="@+id/favMiniMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:v
            class="com.google.android.gms.maps.SupportMapFragment" />-->

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/favMiniMap"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/favlocationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/shopping_cart"
                android:visibility="gone" />

            <TextView
                android:id="@+id/favlocationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#CCFFFFFF"
                android:text="TextView" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5_padding"
        android:layout_marginTop="@dimen/dp1_padding" >

        <Button
            android:id="@+id/detail_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp0.25_padding"
            android:layout_weight="1"
            android:background="@drawable/like_button_selector"
            android:text="@string/detail_text" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp0.25_padding"
            android:layout_weight="1"
            android:background="@drawable/save_button_selector"
            android:text="@string/deleted_text" />
    </LinearLayout>

</LinearLayout>