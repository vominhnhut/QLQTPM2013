<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/menuTgl"
        android:background="#ffffff"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/locationType"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_pho"
            android:visibility="gone" />

        <TextView
            android:id="@+id/searchLocationAddressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/searchLocationNameTxt"
            android:text="373/65/46 Lý Thường Kiệt,Tân Bình" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/searchLocationAddressTxt"
            android:layout_below="@+id/searchLocationAddressTxt"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/searchLocationRating"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="1234" />

        <TextView
            android:id="@+id/searchLocationNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/searchLocationAddressTxt"
            android:layout_alignParentTop="true"
            android:text="Phở Việt"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/menuTgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RelativeLayout2"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp10_pading"
        android:src="@drawable/ic_menu_overflow_dark" />

</RelativeLayout>