<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C8"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        style="@style/rounded_conner_box"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/dp10_pading"
        android:layout_marginLeft="@dimen/dp10_pading"
        android:layout_marginRight="@dimen/dp10_pading"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/large_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating_text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView1"
            style="@style/divider_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10_pading"
            android:layout_marginRight="@dimen/dp10_pading"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        style="@style/rounded_conner_box"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/dp10_pading"
        android:layout_marginLeft="@dimen/dp10_pading"
        android:layout_marginRight="@dimen/dp10_pading"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner_rect"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            style="@style/large_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/divider_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10_pading"
            android:layout_marginRight="@dimen/dp10_pading"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        style="@style/rounded_conner_box"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/dp3_pading"
        android:layout_marginLeft="@dimen/dp10_pading"
        android:layout_marginRight="@dimen/dp10_pading"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            style="@style/large_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_view_text" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/divider_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line1" />

        <fragment
            android:id="@+id/mapView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp3_pading"
            android:layout_marginRight="@dimen/dp3_pading"
            class="com.google.android.gms.maps.SupportMapFragment" />
    </LinearLayout>

</LinearLayout>