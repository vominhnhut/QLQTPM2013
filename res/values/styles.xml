<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#76C9F5</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="left_drawer_text_style">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="user_name_text_style">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">#000099</item>
    </style>

    <style name="comment_text_style">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="post_date_text_style">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="rounded_conner_box">
        <item name="android:background">@drawable/rounded_corner_rect</item>
        <item name="android:paddingLeft">@dimen/dp3_pading</item>
        <item name="android:paddingRight">@dimen/dp3_pading</item>
        <item name="android:paddingTop">@dimen/dp3_pading</item>
        <item name="android:paddingBottom">@dimen/dp3_pading</item>
    </style>

    <style name="large_text">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="large_text">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="small_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="divider_line">
        <item name="android:background">@drawable/line1</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Scrollable_text">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="log_in_textbox_style">
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

</resources>